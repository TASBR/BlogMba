@model BlogMBA.Business.Models.Comentarios.Comentario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Deseja realmente excluir o registro?</h3>
<div>
    <h4>Comentario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInsercao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInsercao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" asp-route-postId=@Model.PostId class="btn btn-danger" />
        <a asp-action="Details" asp-controller="Posts" asp-route-id=@Model.PostId class="btn btn-warning">Voltar</a>
    </form>
</div>
